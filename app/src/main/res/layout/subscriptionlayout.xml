<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_5adp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100adp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/_10adp"
    android:layout_margin="@dimen/_10adp"
    app:layout_constraintTop_toTopOf="parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AB9747FF"
        />


    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10adp"
        android:text="Rs.456"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/_20adp"
        android:textSize="@dimen/_25asp"/>

    <TextView
        android:id="@+id/subheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_45adp"
        android:text="The Super Value pack"
        android:paddingBottom="@dimen/_5adp"
        android:layout_marginStart="@dimen/_15asp"
        android:textSize="@dimen/_15asp"/>



    <TextView
        android:id="@+id/validity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10adp"
        android:layout_gravity="end"
        android:text="Validity"
        android:layout_marginEnd="@dimen/_10adp"
        android:textSize="@dimen/_15asp"/>


    <TextView
        android:id="@+id/days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginBottom="@dimen/_15adp"
        android:layout_marginTop="@dimen/_10adp"
        android:layout_marginEnd="@dimen/_10adp"
        android:text="4days"
        android:textColor="@color/white"
        android:textSize="@dimen/_15asp"/>


    <TextView
        android:id="@+id/MoreDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MoreDetails"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="@dimen/_10adp"
        android:layout_marginEnd="@dimen/_10adp"
        android:textSize="@dimen/_15asp"/>

</androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>